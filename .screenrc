screen -t bash0
screen -t bash1
screen -t bash2
screen -t bash3
screen -t bash4
screen -t bash5
screen -t bash6
screen -t bash7
altscreen on
term screen-256color

# Bind F11 and F12 (NOT F1 and F2) to previous and next screen window
bindkey -k k9 prev
bindkey -k F2 next

